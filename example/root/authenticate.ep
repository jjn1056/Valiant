% layout 'layout.ep';
% content title => 'Sign In';


%= form_for $model, method=>'POST', style=>'width:20em; margin:auto', begin
  <fieldset>
    <legend><%= $model->model_name->human %></legend>
    <div class='form-group'>
      %= input 'username', class=>'form-control', required=>1, autofocus=>1, label=>1;
    </div>
    <div class='form-group'>
      %= password 'password', class=>'form-control', required=>1, label=>1;
    </div>
    %= submit 'sign_in', class=>'btn btn-lg btn-primary btn-block', value=>$model->model_name->human;
  </fieldset>
  %= model_errors class=>'alert alert-danger', style=>'margin: 16px 0 0 0', role=>'alert';
  <p class='text-center' style='padding-top:1em'>
    Not a user? <a href="/register">Register</a> a new account.
  </p>
% end




